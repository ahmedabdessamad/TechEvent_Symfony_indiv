{% extends 'base.html.twig' %}

{% block content %}
    <h1>Appelsponsors list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Role</th>
                <th>Confirmation</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for appelSponsor in appelSponsors %}
            <tr>
                <td><a href="{{ path('appel_sponsor_show', { 'id': appelSponsor.id }) }}">{{ appelSponsor.id }}</a></td>
                <td>{{ appelSponsor.role }}</td>
                <td>{{ appelSponsor.confirmation }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('appel_sponsor_show', { 'id': appelSponsor.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('appel_sponsor_edit', { 'id': appelSponsor.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('appel_sponsor_new') }}">Create a new appelSponsor</a>
        </li>
    </ul>
{% endblock %}
